{
  "name": "Trillo",
  "version": "1.0.0",
  "description": "Trilo flex-boxes",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -wn",
    "devserv": "live-server",
    "start": "npm-run-all --parallel watch:sass devserv",

    "folders":" mkdir components layout, base pages abstracts",

    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Leo",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "concat": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "jquery": "^3.4.1",
    "postcss-cli": "^6.1.3"
  }
}
